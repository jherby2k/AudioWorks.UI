<UserControl x:Class="AudioWorks.UI.Modules.Id3.Views.Id3MetadataSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:viewModels="clr-namespace:AudioWorks.UI.Modules.Id3.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:Id3MetadataSettingsControlViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <StackPanel Width="250">
        <Label Content="Tag version"
               Style="{StaticResource SettingLabel}"/>
        <ComboBox ItemsSource="{Binding Versions}"
                  SelectedIndex="{Binding VersionIndex}"
                  Style="{StaticResource SettingComboBox}"/>
        <Label Content="Character encoding"
               Style="{StaticResource SettingLabel}"/>
        <ComboBox ItemsSource="{Binding Encodings}"
                  SelectedIndex="{Binding EncodingIndex}"
                  Style="{StaticResource SettingComboBox}"/>
        <Label Content="Set a fixed padding size"
               Style="{StaticResource SettingLabel}"/>
        <mahapps:ToggleSwitch IsOn="{Binding ConfigurePadding}"
                              Style="{StaticResource SettingToggleSwitch}"/>
        <Label Content="Padding (in bytes)"
               Style="{StaticResource SettingLabel}"/>
        <mahapps:NumericUpDown Value="{Binding Padding}"
                               IsEnabled="{Binding ConfigurePadding, Mode=OneWay}"
                               Minimum="0"
                               Maximum="16777216"
                               Style="{StaticResource SettingNumericUpDown}"/>
    </StackPanel>

</UserControl>
