<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls">
    <Style TargetType="Control"
           x:Key="LargeRibbonButton">
        <Setter Property="MinWidth"
                Value="53"/>
    </Style>
    <Style TargetType="Button"
           x:Key="CommandButton"
           BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Width"
                Value="75"/>
    </Style>
    <Style TargetType="Label"
           x:Key="SettingLabel"
           BasedOn="{StaticResource {x:Type Label}}">
        <Setter Property="FontSize"
                Value="14"/>
        <Setter Property="Padding"
                Value="0"/>
        <Setter Property="Margin"
                Value="0,0,0,9"/>
    </Style>
    <Style TargetType="Slider"
           x:Key="SettingSlider"
           BasedOn="{StaticResource {x:Type Slider}}">
        <Setter Property="TickPlacement"
                Value="TopLeft"/>
        <Setter Property="AutoToolTipPlacement"
                Value="BottomRight"/>
        <Setter Property="Margin"
                Value="0,0,0,24"/>
    </Style>
    <Style TargetType="ComboBox"
           x:Key="SettingComboBox"
           BasedOn="{StaticResource {x:Type ComboBox}}">
        <Setter Property="Margin"
                Value="0,0,0,24"/>
    </Style>
    <Style TargetType="mahapps:ToggleSwitch"
           x:Key="SettingToggleSwitch">
        <Setter Property="Margin"
                Value="0,0,0,24"/>
    </Style>
    <Style TargetType="mahapps:NumericUpDown"
           x:Key="SettingNumericUpDown">
        <Setter Property="mahapps:TextBoxHelper.SelectAllOnFocus"
                Value="True"/>
        <Setter Property="Margin"
                Value="0,0,0,24"/>
    </Style>
</ResourceDictionary>
